<?xml version="1.0"?>
<launch>

    <arg name="resolution" default="0.05"/>

    <arg name="configuration_basename" default="agv_robot.lua"/>

    <node pkg="cartographer_ros" type="cartographer_occupancy_grid_node" name="cartographer_occupancy_grid_node" args="-resolution 0.05"/>

    <node pkg="cartographer_ros" type="cartographer_offline_node" name="cartographer_node" args="
        -configuration_directory $(find agv_description)/config
        -configuration_basenames $(arg configuration_basename)
        -urdf_filenames $(find agv_description)/urdf/agv_robot.urdf
        -bag_filenames $(find agv_bag)/bags/agv_cartographer.bag
        " output="screen">
    </node>

    <!-- <node name="rviz" pkg="rviz" type="rviz" required="true" args="-d $(find agv_slam)/rviz_config/agv_offline_cartographer.rviz"/> -->

</launch>
